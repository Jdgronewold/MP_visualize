body {
  height: auto;
  background-color: #dededc;
}

.header-vis{
  background: url(<%= asset_path 'mountain.jpg' %>);
  background-size: auto auto;
  height: 200px;
  background-position: bottom;
  color: white;
  font-size: 30px;
  text-align: center;
  vertical-align: middle;
  line-height: 250px;
}

.search-component {
  width: 500px;
  border-radius: 10px;
  background-color: white;
  padding: 20px;
  padding-left: 10px;
  margin-left: 30px;
  margin-top: 15px;
}
.search-component input, button {
  margin-left: 20px;
}

.visuals {
  margin-top: 20px;
}

.encouragement {
  margin: 20px;
  margin-left: 10px;
}

.fetching {
  margin: 30px;
}

.fa {
  margin-left: 5px;
}

.fa .tooltip {
    visibility: hidden;
    width: 120px;
    background-color: black;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 5px 5px;

    /* Position the tooltip */
    position: absolute;
    z-index: 1;
}

.fa:hover .tooltip {
    visibility: visible;
}

.visuals-main {
  height: 460px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

ul {
  list-style: none
}

.routes-list {
  margin: 0;
  margin-left: 30px;
  padding: 15px;
  width: 150px;
  height: 410px;
  font-weight: bold;
  overflow: scroll;
  font-size: 16px;
  // border: 3px solid black;
  border-radius: 20px;
  background-color: white;
}

.routes-list li:hover {
  text-decoration: underline;
}

.routes-grades {
  height: 410px;
  padding: 15px;
  // border: 3px solid black;
  border-radius: 20px;
  background-color: white;
  margin-left: 30px;
}

.route-types {
  height: 410px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 15px;
  // border: 3px solid black;
  border-radius: 20px;
  background-color: white;
  margin-left: 30px;
}

.route-detail {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20px;
  background-color: white;
  margin: 30px;
}

.route-image {
  margin: 20px;
}

.route-detail li {
  font-size: 20px;
  margin: 10px;
  margin-left: 0;
}

.legend td{
    padding:4px 5px;
    vertical-align:bottom;
}


// li colors
.li-Trad {
  color: #3366cc;
}

.li-Sport {
  color: #dc3912;
}

.li-Alpine {
  color: #ff9900;
}

.li-Ice {
  color: #0099c6;
}

.li-Mixed {
  color: #990099;
}

.li-TradAid {
  color: #ffd700;
}

.li-Other {
  color: #00ff7f;
}
